@model IEnumerable<Employee>

@{ 
    ViewBag.Title = "Employee List";
}
        <table>
            <thead>
                <tr>
                    <td>ID</td>
                    <td>Name</td>
                    <td>Department</td>
                    <td>Email</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in Model)
                {
                    <tr>
                        <td>@employee.Id</td>
                        <td>@employee.Name</td>
                        <td>@employee.Department</td>
                        <td>@employee.Email</td>
                    </tr>
                }

            </tbody>
        </table>
